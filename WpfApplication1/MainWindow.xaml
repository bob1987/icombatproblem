        <Button Name="Back" Margin="170,230,348.333,240.667" Click="Backspace">Del</Button>
        <Button Name="TotalButton" Margin="10,285,508.333,205.667" Click="Get_Inventory">Get Total</Button>
        <Button Name="WithdrawButton" Margin="170,285,348.333,205.667" Click="Withdraw_Money">Withdraw</Button>
        <Button Name="RestockButton" Margin="90,285,428.333,205.667" Click="Restock_Money">Restock</Button>
        <TextBox Name="Output" MinWidth="200" MinHeight="100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="336,10,10.333,0" Height="501" Width="247" TextWrapping="Wrap"></TextBox>
    </Grid>
</Window>
