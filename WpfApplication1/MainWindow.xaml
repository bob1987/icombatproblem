        <Button Name="Two" Tag="2" Margin="90,65,428.333,405.667" Click="Update_Display">2</Button>
        <Button Name="Three" Tag="3" Margin="170,65,348.333,405.667" Click="Update_Display">3</Button>
        <Button Name="Four" Tag="4" Margin="10,120,508.333,350.667" Click="Update_Display">4</Button>
        <Button Name="Five" Tag="5" Margin="90,120,428.333,350.667" Click="Update_Display">5</Button>
        <Button Name="Six" Tag="6" Margin="170,120,348.333,350.667" Click="Update_Display">6</Button>
